<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/main_color">

        <ImageView
            android:id="@+id/open_drawer_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_menu_34"
            android:layout_gravity="center_vertical"
            android:paddingStart="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:letterSpacing="0.2"
            android:gravity="center_horizontal"
            android:fontFamily="sans-serif-condensed"/>
    </LinearLayout>

    <ViewFlipper
        android:id="@+id/fliffer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.6"
        android:orientation="horizontal"
        android:weightSum="3.5">


        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.75"
            android:background="@color/white"
            android:drawableTop="@drawable/airlogo"
            android:foreground="?attr/selectableItemBackground"
            android:paddingTop="20dp"
            android:paddingBottom="25dp"
            android:text="AIRLINES"

            android:textColor="#003300"
            android:textStyle="bold"

            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:background="#CCCC00"

            ></View>

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.75"
            android:background="@color/white"
            android:drawableTop="@drawable/culogo"
            android:foreground="?attr/selectableItemBackground"
            android:paddingTop="20dp"
            android:paddingBottom="25dp"
            android:text="CURRENCY"
            android:textColor="#003300"
            android:textStyle="bold"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".02"
        android:orientation="horizontal"
        android:weightSum=".5"

        >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.025"

            ></View>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".45"
            android:background="#CCCC00"

            ></View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.6"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3.5">

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.75"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/hotel2"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="25dp"
            android:text="HOTELS"
            android:textColor="#003300"
            android:textStyle="bold"></Button>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:background="#CCCC00"></View>

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.75"
            android:background="@color/white"
            android:drawableTop="@drawable/map1"
            android:foreground="?attr/selectableItemBackground"
            android:paddingTop="20dp"
            android:paddingBottom="25dp"
            android:text="MAP"
            android:textColor="#003300"

            android:textStyle="bold"

            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="@color/white" />


</LinearLayout>